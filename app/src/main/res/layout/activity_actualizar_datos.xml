<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.ActualizarDatos">

    <ScrollView
        android:id="@+id/scrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAECE1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Actualizar datos"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="50dp"
                android:text="Nombre"
                android:textColor="#330000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,.Julia"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="50dp"
                android:text="Apellido Paterno"
                android:textColor="#330000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/apePat"
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,.Sanchez"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="50dp"
                android:text="Apellido Materno"
                android:textColor="#330000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/apeMat"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,.Arellano"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Telefono"
                android:paddingStart="50dp"
                android:textColor="#330000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tel"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="P.ej,.5500000000"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="50dp"
                android:text="RFC"
                android:textColor="#330000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/rfc"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="P.ej,.ejemplo@ejemplo.com"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingStart="50dp"
                android:text="CÃ³digo"
                android:textColor="#330000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/cod"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="P.ej,Inserta un codigo de 4 numeros"
                android:inputType="numberPassword"
                android:padding="16dp"
                android:textColor="#1976D2"
                android:textSize="16sp"
                tools:background="#FAC6B5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del Infante"
                android:paddingLeft="100dp"
                android:textColor="#330000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:padding="12dp"
                android:text="Nombre del Infante"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/nomInf"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,Inserta el nombre del infante" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:padding="12dp"
                android:text="Apellido Paterno del Infante"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/apePatInf"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,Inserta apellido del infante" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:padding="12dp"
                android:text="Apellido Materno del Infante"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/apeMatInf"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,Inserta apellido del infante " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:padding="12dp"
                android:text="Edad del Infante"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edadinf"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="P.ej,Inserta edad del infante " />

            <Button
                android:id="@+id/btnregis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verde2"
                android:padding="20dp"
                android:paddingBottom="30dp"
                android:layout_marginStart="50dp"
                android:text="Actualizar"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>