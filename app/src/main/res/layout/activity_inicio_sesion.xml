<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".InicioSesion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:text="Ya casi llegamos"
        android:textColor="#16B46A"
        android:textSize="48sp"
        android:fontFamily="georgia"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill|fill_horizontal"
        android:text="Agrega los datos para acceder."
        android:textColor="#088F8F"
        android:textSize="34sp"
        android:fontFamily="georgia"/>

    <TextView
        android:layout_width="386dp"
        android:layout_height="38dp"
        android:layout_gravity="center|fill|fill_horizontal"
        android:text="Correo"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="50dp" />

    <EditText
        android:id="@+id/editcorreoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Inserta Correo"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:translationY="50dp"
        tools:background="#EFD9CE" />

    <TextView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill|fill_horizontal"
        android:text="Contraseña"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="100dp" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="Inserta Contraseña"
        android:inputType="textPassword"
        android:padding="8dp"
        android:translationY="100dp"
        tools:background="#EFD9CE" />
    <Button
        android:id="@+id/btninic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2FE574"
        android:text="Inicia Sesion"
        android:translationX="30dp"
        android:translationY="200dp" />

    <Button
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#088F8F"
        android:text="Regresar"
        android:translationX="30dp"
        android:translationY="200dp" />


</LinearLayout>